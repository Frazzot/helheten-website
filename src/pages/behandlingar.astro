        href="#KINESIOLOGI" 
        align="text-left" 
      />
      <Button 
        title="KOPPNING" 
        href="#KOPPNING" 
        align="text-left" 
      />
      <Button 
        title="MANIKYR" 
        href="#MANIKYR" 
        align="text-left" 
      />
      <Button 
        title="MASSAGE" 
        href="#MASSAGE" 
        align="text-left" 
      />
      <Button
        title="MÅ PURE CELL"
        href="#MÅ PURE CELL TREATMENT"
        align="text-left"
      />
