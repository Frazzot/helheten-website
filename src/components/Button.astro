---
interface Props {
  title: string;
  href: string;
  align?: "text-left" | "text-center" | "text-right";
}

const { title, href, align} = Astro.props;
---

<a href={href}>
  <div class="bg-sage rounded-md drop-shadow-lg py-4 px-4">
    <p class=`text-off-white text-3xl ${align ?? "text-center"} font-francoisOne`>
      {title}
    </p>
  </div>
</a>
